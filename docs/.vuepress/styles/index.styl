// ============================================================
// 1. 首页特性卡片 (Features) 绝对居中布局优化
// ============================================================
.home-wrapper .features
  display: flex !important          // 强制启用弹性布局
  flex-wrap: wrap !important        // 允许换行
  justify-content: center !important // 核心：无论几行，内容永远水平居中对齐
  margin: 0 auto !important
  padding: 2rem 0 !important
  border-top: none !important       // 如果不需要那根分割线可以加上这行

.home-wrapper .feature
  flex: 0 0 28% !important          // 核心：固定宽度占比，不随行数伸缩（28% 刚好一行三个）
  max-width: 28% !important         // 限制最大宽度
  text-align: center !important     // 文字居中
  margin: 1rem 1% !important        // 卡片之间的间距
  float: none !important            // 彻底禁用可能存在的浮动布局
  transition: all .3s               // 加上丝滑的悬停动画
  
  &:hover
    transform: translateY(-5px)     // 鼠标指上去会轻轻浮起

// 针对平板和手机的适配
@media (max-width: 959px)
  .home-wrapper .feature
    flex: 0 0 45% !important        // 平板上一行两个
    max-width: 45% !important

@media (max-width: $MQMobile)
  .home-wrapper .feature
    flex: 0 0 90% !important        // 手机上一行一个
    max-width: 90% !important

// ============================================================
// 2. Gitalk 评论区样式重置
// ============================================================
.gt-container
  .gt-ico-tip
    &::after
      content: '。( Win + . ) 或 ( ⌃ + ⌘ + ␣ ) 打开表情'
      color: #999
      font-size: .8rem
  .gt-meta
    border-color var(--borderColor)!important
  .gt-comments-null
    color var(--textColor)
    opacity .5
  .gt-header-textarea
    color var(--textColor)
    background rgba(180,180,180,0.1)!important
  .gt-btn
    border-color $accentColor!important
    background-color $accentColor!important
  .gt-btn-preview
    background-color rgba(255,255,255,0)!important
    color $accentColor!important
  a
    color $accentColor!important
  .gt-svg svg
    fill $accentColor!important
  .gt-comment-content,.gt-comment-admin .gt-comment-content
    background-color rgba(150,150,150,0.1)!important
    &:hover
      box-shadow 0 0 25px rgba(150,150,150,.5)!important
    .gt-comment-body
      color var(--textColor)!important

// ============================================================
// 3. 社交图标 - QQ徽章样式
// ============================================================
.qq
  position: relative;
.qq::after
  content: "可撩";           // 在QQ图标旁显示的文字
  background: $accentColor;  // 使用主题主色调
  color:#fff;
  padding: 0 5px;
  border-radius: 10px;
  font-size:12px;
  position: absolute;
  top: -4px;
  right: -35px;
  transform:scale(0.85);

// ============================================================
// 4. 代码演示模块 (Demo Block) 图标颜色
// ============================================================
body .vuepress-plugin-demo-block__wrapper
  &,.vuepress-plugin-demo-block__display
    border-color rgba(160,160,160,.3)
  .vuepress-plugin-demo-block__footer:hover
    .vuepress-plugin-demo-block__expand::before
      border-top-color: $accentColor !important;
      border-bottom-color: $accentColor !important;
    svg
      fill: $accentColor !important;

// ============================================================
// 5. 全文搜索框 (Search Suggestions) 样式优化
// ============================================================
.suggestions
  overflow: auto
  max-height: calc(100vh - 6rem) // 防止搜索结果超出屏幕高度
  @media (max-width: 719px) {    // 针对移动端的搜索框宽度优化
    width: 90vw;
    min-width: 90vw!important;
    margin-right: -20px;
  }
  .highlight
    color: $accentColor          // 搜索关键词高亮颜色
    font-weight: bold
